{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ],
    "paths": {
      "@app-core/*": ["app/core/*"],

      "@app-root-store/*": ["app/store/*"],
      "@app-root-store": ["app/store/index"],

      "@app-contacts-store/*": ["app/views/contacts/store/*"],
      "@app-contacts-store": ["app/views/contacts/store/index"]
    }
  }
}
